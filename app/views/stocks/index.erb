<h1 class="byline2" id="byline2"> The Stock Watchlist</h1>

  <img src="<%= @stocks.logo %>" class="center" alt="<%= @stocks.name %> >
<div class="container">

  <div class="row">
    <div class="col">
      One of three columns
    </div>
    <div class="col">

    </div>

  </div>

  <div class="row">
    <div class="col">
      One of three columns
    </div>
    <div class="col">
      <h4> Name : </h4>
    </div>
    <div class="col">
      <u><%= @stocks.name %></u>
    </div>
    <div class="col">
      One of three columns
    </div>
  </div>

  <div class="row">
    <div class="col">

    </div>
    <div class="col">
      <h4> Price: </h4>
    </div>
    <div class="col">
      <u> <%= @stocks.price %> </u>
    </div>
    <div class="col">

    </div>
  </div>

  <div class="row">
    <div class="col">
      One of three columns
    </div>
    <div class="col">
      <h4> CEO : </h4>
    </div>
    <div class="col">
      <u><%= @stocks.ceo %> </u>
    </div>
    <div class="col">
      One of three columns
    </div>
  </div>

  <div class="row">

    <div class="col">
      <h4> Description: </h4>
    </div>
    <div class="col-6">
      <u><%= @stocks.description %> </u>
    </div>

  </div>


</div>





<p> Logo:  <img src="<%= @stocks.logo %>" alt="<%= @stocks.name %>"> </p><br>


<form action="/watchlists" method="POST">

      <input type="hidden" id="title_<%=@stocks.id%>" name="watchlist[stock][id]" value="<%= @stocks.id %>"><br>
      <input type="hidden" id="title_<%= @stocks.name%>" name="watchlist[stock][name]" value="<%= @stocks.name %>"><br>
      <input type="hidden" id="title_<%=@stocks.price%>" name="watchlist[stock][price]" value="<%= @stocks.price %>"><br>
      <input type="hidden" id="title_<%=@stocks.ticker%>" name="watchlist[stock][ticker]" value="<%= @stocks.ticker %>"><br>
      <input type="hidden" id="title_<%=@stocks.logo%>" name="watchlist[stock][logo]" value="<%= @stocks.logo %>"><br>
      <input type="hidden" id="title_<%=@stocks.ceo%>" name="watchlist[stock][ceo]" value="<%= @stocks.ceo %>"><br>
      <input type="hidden" id="title_<%=@stocks.description %>" name="watchlist[stock][description]" value="<%= @stocks.description %>"><br>

      <% @watchlists.each do |watchlist| %>
          <label><%= watchlist.name %></label>
          <input type="checkbox" id="title_<%=watchlist.id%>" name="watchlist[id][]" value="<%= watchlist.id %>"><br>
          <input type="hidden" id="title_<%=watchlist.name%>" name="watchlist[name]" value="<%= watchlist.name %>">
        <% end %>

    <button type="submit" class="btn btn-primary">Add Stock</button>

  <!-- <input type="submit" class="btn btn-info" value="Add Stock" > -->
</form>

<a href="stocks/new"> Search for a different Stock </a>
