<div class="container">
    <h2 class="byline2" id="byline2"> The Stock Watchlist</h2>

  <div class="row">
    <div class="col">
       <h3>Watchlist <%=  @watchlist.name %></h3>
      <a href="/watchlists/<%=  @watchlist.id %>/edit"> Edit <%=  @watchlist.name %> edit </a>
  </div>
</div>
<br>
<div>
<% if @stocks == [] || @stocks == nil %>
  <p> No stocks </p>
<% else %>
 <table style="width:75%" class="center">
  <tr>
    <th>CEO</th>
    <th>NAME</th>
    <th>TICKER</th>
    <th>Price</th>
    <th>    </th>
  </tr>
   <% @stocks.each do |stock| %>
  <tr>

    <td><%=  stock.ceo %></td>
    <td><%=  stock.name %></td>
    <td><%=  stock.ticker %></td>
    <td><%=  stock.price %></td>
    <td> <form method="POST" action="/stocks/<%= stock.id %>">
       <input type="hidden" name="_method" value="delete" />
       <input type="submit" class="btn btn-danger" value="delete"/>
     </form> </td>
  </tr>
   <%end%>
</table>

<% end %>
</div>

<div class="center">
<form action="/stocks/new" method="get" >
<input type="hidden" name="watchlist_id" value="<%= @watchlist.id %>">
 <button type="submit" class="btn btn-primary">Add Stock</button>
</form>
<br>
<br>
<a href="/watchlists"> View all watchlist </a> <br>
