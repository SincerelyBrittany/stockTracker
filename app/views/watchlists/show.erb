 <% @stocks.each do |stock| %>
  <% if stock.name != nil %>
   <h3> Name: <%= stock.name %><h3>
     <form method="POST" action="/stocks/<%= stock.id %>">
       <input type="hidden" name="_method" value="delete" />
       <input type="submit" value="delete"/>
     </form>
    <ul> <li><%=  stock.ticker %><li>
        <li>  <%=  stock.price %><li>
         <li>  <%=  stock.description %><li>
    </ul>
     <%end%>
 <%end%>




 <table style="width:50%">
  <tr>
    <th>Name</th>
    <th>Ticker</th>
    <th>Price</th>
  </tr>
   <% @stocks.each do |stock| %>
  <tr>

    <td><%=  stock.ceo %></td>
    <td><%=  stock.name %></td>
    <td><%=  stock.ticker %></td>
    <td><%=  stock.price %></td>
    <td><%=  stock.ceo %></td>
  </tr>
   <%end%>
</table>
